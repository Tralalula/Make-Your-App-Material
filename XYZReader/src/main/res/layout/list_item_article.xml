<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_card_view_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:transitionName="test"
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_dynamic_height_network_image_view_layout_height"
            android:background="@color/list_thumbnail_background_color"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/list_article_title_padding_bottom"
            android:paddingLeft="@dimen/list_article_title_padding_left"
            android:paddingRight="@dimen/list_article_title_padding_right"
            android:paddingTop="@dimen/list_article_title_padding_top"
            android:textColor="@color/list_article_title_text_color"
            android:textSize="@dimen/list_article_title_text_size" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/list_article_subtitle_padding"
            android:paddingLeft="@dimen/list_article_subtitle_padding"
            android:paddingRight="@dimen/list_article_subtitle_padding"
            android:singleLine="true"
            android:textColor="@color/list_article_subtitle_text_color"
            android:textSize="@dimen/list_article_subtitle_text_size" />
    </LinearLayout>
</android.support.v7.widget.CardView>